<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   logicalFilePath="data/studentgroup.xml">

    <changeSet author="BodenchukY" id="group_1">
        <createTable tableName="STUDENT_GROUP">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="NAME" type="VARCHAR2(100 BYTE)" />
        </createTable>

        <rollback>
            <dropTable tableName="STUDENT_GROUP" />
        </rollback>
    </changeSet>

    <changeSet id="BodenchukY" author="group_2">
        <addPrimaryKey tableName="STUDENT_GROUP" columnNames="ID" constraintName="PK_STUDENT_GROUP" />
        <rollback>
            <dropPrimaryKey tableName="STUDENT_GROUP" constraintName="PK_STUDENT_GROUP" />
        </rollback>
    </changeSet>

    <changeSet author="BodenchukY" id="group_3">
        <createSequence sequenceName="STUDENT_GROUP_SEQ" />
        <rollback>
            <dropSequence sequenceName="STUDENT_GROUP_SEQ" />
        </rollback>
    </changeSet>
</databaseChangeLog>