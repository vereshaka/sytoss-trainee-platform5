<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   logicalFilePath="data/STP-1046.xml">

    <changeSet author="IvanL" id="STP-1046-1">
        <sql>
            update exam
            set name = exam.name || '-' || rn from (
         select *, row_number() over (partition by name order by name) rn
         from exam
        ) subquery
            where subquery.rn
                > 1
              and subquery.Id = exam.Id;
        </sql>
    </changeSet>

    <changeSet author="IvanL" id="STP-1046-2">
        <addUniqueConstraint tableName="EXAM" columnNames="NAME, DISCIPLINE_ID" constraintName="UK_EXAM"/>
        <rollback>
            <dropUniqueConstraint  tableName="EXAM" constraintName="UK_EXAM"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
