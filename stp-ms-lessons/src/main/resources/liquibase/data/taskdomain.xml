<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   logicalFilePath="data/taskdomain.xml">

    <changeSet author="BodenchukY" id="task_domain_1">
        <createTable tableName="TASK_DOMAIN">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="NAME" type="VARCHAR2(100 BYTE)" />
            <column name="SCRIPT" type="VARCHAR2(200 BYTE)" />
            <column name="TASK_ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="TASK_DOMAIN" />
        </rollback>
    </changeSet>

    <changeSet author="BodenchukY" id="task_domain_2">
        <addPrimaryKey tableName="TASK_DOMAIN" columnNames="ID" constraintName="PK_TASK_DOMAIN" />
        <rollback>
            <dropPrimaryKey tableName="TASK_DOMAIN" constraintName="PK_TASK_DOMAIN" />
        </rollback>
    </changeSet>

    <changeSet author="BodenchukY" id="task_domain_3">
        <createSequence sequenceName="TASK_DOMAIN_SEQ" />
        <rollback>
            <dropSequence sequenceName="TASK_DOMAIN_SEQ" />
        </rollback>
    </changeSet>

    <changeSet author="MitkovM" id="task_domain_4">
        <addForeignKeyConstraint baseTableName="TASK_DOMAIN" baseColumnNames="TASK_ID"
                                 constraintName="FK_TASKDOMAIN2TASK" referencedTableName="TASK"
                                 referencedColumnNames="ID" />
        <rollback>
            <dropForeignKeyConstraint baseTableName="TASK_DOMAIN" constraintName="FK_TASKDOMAIN2TASK" />
        </rollback>
    </changeSet>
</databaseChangeLog>