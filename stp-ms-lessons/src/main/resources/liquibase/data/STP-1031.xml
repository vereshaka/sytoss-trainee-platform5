<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   logicalFilePath="data/STP-1031.xml">

    <changeSet id="STP-1031-1" author="IvanL">
        <addColumn tableName="TASK">
            <column name="MODE" type="VARCHAR2(100 BYTE)"/>
        </addColumn>
        <rollback>
            <dropColumn tableName="TASK" columnName="MODE"/>
        </rollback>
    </changeSet>

    <!--<changeSet id="STP-1031-2" author="IvanL">
        <sql>
            UPDATE TASK SET MODE = 'AND'
        </sql>
    </changeSet>-->

    <changeSet id="STP-1031-3" author="IvanL">
        <addNotNullConstraint tableName="TASK" columnName="MODE" defaultNullValue="AND" constraintName="NOT_NULL_MODE"/>
    </changeSet>

</databaseChangeLog>
