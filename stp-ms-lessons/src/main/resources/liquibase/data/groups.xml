<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   logicalFilePath="data/groups.xml">

    <changeSet author="ShatokhinA" id="groups_1">
        <createTable tableName="GROUPS">
            <column name="ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR2(100 BYTE)"/>
            <column name="DISCIPLINE_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="GROUPS"/>
        </rollback>
    </changeSet>

    <changeSet author="ShatokhinA" id="groups_2">
        <addPrimaryKey tableName="GROUPS" columnNames="ID" constraintName="PK_GROUPS"/>
        <rollback>
            <dropPrimaryKey tableName="GROUPS" constraintName="PK_GROUPS"/>
        </rollback>
    </changeSet>

    <changeSet author="ShatokhinA" id="groups_3">
        <addForeignKeyConstraint baseTableName="GROUPS" baseColumnNames="DISCIPLINE_ID"
                                 constraintName="FK_GROUPS2DISCIPLINE" referencedTableName="DISCIPLINE"
                                 referencedColumnNames="ID" />
        <rollback>
            <dropForeignKeyConstraint baseTableName="GROUPS" constraintName="FK_GROUPS2DISCIPLINE" />
        </rollback>
    </changeSet>

    <changeSet author="ShatokhinA" id="groups_4">
        <createSequence sequenceName="GROUPS_SEQ"/>
        <rollback>
            <dropSequence sequenceName="GROUPS_SEQ"/>
        </rollback>
    </changeSet>
</databaseChangeLog>