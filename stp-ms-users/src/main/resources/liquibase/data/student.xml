<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   logicalFilePath="data/student.xml">

    <changeSet author="MitkovM" id="student_1">
        <createTable tableName="STUDENT">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="FIRST_NAME" type="VARCHAR2(100 BYTE)" />
            <column name="LAST_NAME" type="VARCHAR2(100 BYTE)" />
            <column name="MIDDLE_NAME" type="VARCHAR2(100 BYTE)" />
            <column name="EMAIL" type="VARCHAR2(100 BYTE)" />
            <column name="PHOTO" type="VARCHAR2(255 BYTE)" />
            <column name="IS_MODERATED" type="BOOLEAN" />
        </createTable>

        <rollback>
            <dropTable tableName="STUDENT" />
        </rollback>
    </changeSet>

    <changeSet author="MitkovM" id="student_2">
        <addPrimaryKey tableName="STUDENT" columnNames="ID" constraintName="PK_STUDENT" />
        <rollback>
            <dropPrimaryKey tableName="STUDENT" constraintName="PK_STUDENT" />
        </rollback>
    </changeSet>

    <changeSet author="MitkovM" id="student_3">
        <createSequence sequenceName="STUDENT_SEQ" />
        <rollback>
            <dropSequence sequenceName="STUDENT_SEQ" />
        </rollback>
    </changeSet>
</databaseChangeLog>