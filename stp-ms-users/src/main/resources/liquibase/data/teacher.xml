<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   logicalFilePath="data/teacher.xml">

    <changeSet author="KornienkoD" id="teacher_1">
        <createTable tableName="TEACHER">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="FIRST_NAME" type="VARCHAR2(100 BYTE)" />
            <column name="LAST_NAME" type="VARCHAR2(100 BYTE)" />
            <column name="MIDDLE_NAME" type="VARCHAR2(100 BYTE)" />
            <column name="EMAIL" type="VARCHAR2(100 BYTE)" />
        </createTable>

        <rollback>
            <dropTable tableName="TEACHER" />
        </rollback>
    </changeSet>

    <changeSet author="KornienkoD" id="teacher_2">
        <addPrimaryKey tableName="TEACHER" columnNames="ID" constraintName="PK_TEACHER" />
        <rollback>
            <dropPrimaryKey tableName="TEACHER" constraintName="PK_TEACHER" />
        </rollback>
    </changeSet>

    <changeSet author="KornienkoD" id="teacher_3">
        <createSequence sequenceName="TEACHER_SEQ" />
        <rollback>
            <dropSequence sequenceName="TEACHER_SEQ" />
        </rollback>
    </changeSet>
</databaseChangeLog>