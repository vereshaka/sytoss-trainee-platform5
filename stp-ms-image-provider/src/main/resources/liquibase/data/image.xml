<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
                   logicalFilePath="data/image.xml">

    <changeSet author="LarinI" id="image_1">
        <createTable tableName="IMAGE">
            <column name="ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="IMAGE_BYTES" type="BYTEA"/>
        </createTable>

        <rollback>
            <dropTable tableName="IMAGE"/>
        </rollback>
    </changeSet>

    <changeSet author="LarinI" id="image_2">
        <addPrimaryKey tableName="IMAGE" columnNames="ID" constraintName="PK_IMAGE"/>
        <rollback>
            <dropPrimaryKey tableName="IMAGE" constraintName="PK_IMAGE"/>
        </rollback>
    </changeSet>

    <changeSet author="LarinI" id="image_3">
        <createSequence sequenceName="IMAGE_SEQ"/>
        <rollback>
            <dropSequence sequenceName="IMAGE_SEQ"/>
        </rollback>
    </changeSet>

</databaseChangeLog>